<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#282828"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matt.feedly.LogIn"
    tools:showIn="@layout/activity_log_in">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="Email Id"
        android:fontFamily="@assets/fonts/roboto.ttf"
        android:background="@drawable/rounded_edittext"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/ic_email_white_36dp"
        android:drawablePadding="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/pwd" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:hint="Password"
        android:fontFamily="@assets/fonts/roboto.ttf"
        android:singleLine="true"
        android:autoText="false"
        android:password="false"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@mipmap/ic_lock_white_36dp"
        android:drawablePadding="20dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:text="LOG IN"
        android:id="@+id/login"
        android:background="@drawable/button_2"
        android:textSize="25dp"
        android:onClick="LogIn"
        android:fontFamily="@assets/fonts/roboto.ttf"
        android:layout_below="@+id/pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />





</RelativeLayout>
