<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matt.feedly.HomePage"
    tools:showIn="@layout/activity_home_page"
    android:background="#282828">

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/button"
        android:background="@drawable/button_2"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        />
    <Button
        android:id="@+id/imageButton5"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/fbbutton"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/imageButton4"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/googlebutton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />


    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Sign up"
        android:id="@+id/button2"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_2"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/collage1"
        android:layout_above="@+id/button"
        android:id="@+id/imageView" />

</RelativeLayout>
